# Special thanks for inspiration and References:
# - https://github.com/stephen-huan/dotfiles/blob/master/.dotfiles/config/skhd/skhdrc
# - https://www.youtube.com/watch?v=AdwhjIg_Xe4
# - https://www.notion.so/Yabai-8da3b829872d432fac43181b7ff628fc


hyper - 1 : yabai -m space --focus 1
hyper - 2 : yabai -m space --focus 2
hyper - 3 : yabai -m space --focus 3
hyper - 4 : yabai -m space --focus 4
hyper - 5 : yabai -m space --focus 5
hyper - 6 : yabai -m space --focus 6
hyper - 7 : yabai -m space --focus 7
hyper - 8 : yabai -m space --focus 8
hyper - 9 : yabai -m space --focus 9
hyper - 0 : yabai -m space --focus 10

hyper - r : yabai -m space --rotate 90

hyper - h : yabai -m window --focus west
hyper - j : yabai -m window --focus south
hyper - k : yabai -m window --focus north
hyper - l : yabai -m window --focus east

hyper - a : yabai -m window --swap west
hyper - s : yabai -m window --swap south
hyper - w : yabai -m window --swap north
hyper - d : yabai -m window --swap east

hyper - left : yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0
hyper - right : yabai -m window --resize left:20:0 || yabai -m window --resize right:20:0
hyper - up : yabai -m window --resize top:0:-20 || yabai -m window --resize bottom:0:-20
hyper - down : yabai -m window --resize top:0:20 || yabai -m window --resize bottom:0:20

hyper - f : yabai -m window --toggle zoom-fullscreen

hyper - y : yabai -m space --mirror y-axis

hyper - x : yabai -m space --mirror x-axis

hyper - g : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# Get it cus cum, makes this window travel through all spaces, so really cool
hyper - c : yabai -m window --toggle sticky

# Makes this window the top window
hyper - v : yabai -m window --toggle topmost

# toggle sticky, topmost and resize to picture-in-picture size
# todo: change this to a more appropriate grid size
hyper - p : yabai -m window --toggle sticky;\
            yabai -m window --toggle topmost;\
            yabai -m window --grid 5:5:1:1:2:2





ralt - i : yabai -m space --layout bsp;

ralt - o : yabai -m space --layout float;

ralt - d : yabai -m space --destroy

ralt - n : yabai -m space --create && \
             set index (yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index') && \
             yabai -m space --focus (math $index - 1)

ralt - 1 : yabai -m window --space 1; yabai -m space --focus 1
ralt - 2 : yabai -m window --space 2; yabai -m space --focus 2
ralt - 3 : yabai -m window --space 3; yabai -m space --focus 3
ralt - 4 : yabai -m window --space 4; yabai -m space --focus 4
ralt - 5 : yabai -m window --space 5; yabai -m space --focus 5
ralt - 6 : yabai -m window --space 6; yabai -m space --focus 6
ralt - 7 : yabai -m window --space 7; yabai -m space --focus 7
ralt - 8 : yabai -m window --space 8; yabai -m space --focus 8
ralt - 9 : yabai -m window --space 9; yabai -m space --focus 9
ralt - 0 : yabai -m window --space 10; yabai -m space --focus 10

ralt - h : yabai -m window --insert west
ralt - j : yabai -m window --insert south
ralt - k : yabai -m window --insert north
ralt - l : yabai -m window --insert east
