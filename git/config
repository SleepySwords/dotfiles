[core]
    pager = delta
    editor = nvim
    autocrlf = input
    untrackedCache = true
    fsmonitor = true

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all

[push]
    followTags = true

[pull]
    rebase = true

[rebase]
    missingCommitsCheck = warn

[branch]
    sort = -committerdate

[tag]
    sort = -taggerdate

[interactive]
    diffFilter = delta --color-only

[add.interactive]
    useBuiltin = false # required for git 2.37.0

[include]
    path = "themes.gitconfig"

[delta "noside"]
    side-by-side = false

[delta]
    navigate = true    # use n and N to move between diff sections
    ; light = true      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    file-decoration-style = ul
    file-modified-label = modified: 
    file-style = blue bold
    hunk-header-style = file line-number syntax
    hunk-header-line-number-style = gray italic bold
    hunk-header-file-style = gray italic bold
    hunk-label = ~>
    hunk-header-decoration-style = none

    ; features = default

    line-numbers-left-format = "{nm:^4} "
    line-numbers-right-format = "{np:^4} "
    line-numbers = true

[delta "nvim"]
    light = false
    dark = true
    syntax-theme = Vibrant Sunburst

[color "diff"]
    frag = italic

[merge]
    conflictstyle = diff3
    ; 	tool = nvimdiff

[diff]
    colorMoved = default

[commit]
    gpgsign = true

[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f

[gpg]
    program = gpg

[commit]
	template = ~/.config/git/template

